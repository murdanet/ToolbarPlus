<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Busqueda"
    android:background="#FD5E53">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Busqueda"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"


        />
    <SearchView
        android:id="@+id/busqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu busqueda"
        android:iconifiedByDefault="false"
        android:queryHint="Ingresa tu busqueda"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/black"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Para buscar, escribe en la barra alguna de las palabras claves: Principal, Inicios,Musica, Perfil, Cardboard, asÃ­ seras redirigido a las otras pantallas."
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/superdog_1"
        android:layout_marginTop="300dp"/>
</RelativeLayout>